server {
  listen 80;

  return 301 https://$host$request_uri;
}

server {
  listen 443 ssl;

  ssl_certificate /etc/letsencrypt/live/{{ "fqdn" | lookup }}/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/{{ "fqdn" | lookup }}/privkey.pem;

  resolver {{ "lxd-host-ip" | lookup }};
  set $resolved "http://{{ "lxd-container-name" | lookup }}.lxd";

  location / {
    proxy_pass $resolved;
  }
}
